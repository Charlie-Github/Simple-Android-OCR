<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thebluecheese.android.activity.FoodSearchActivity" >

	<ImageView
      android:id="@+id/search_backgound_imageView"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:scaleType="centerCrop"
      android:src="@drawable/android_search_background" />
       
    <EditText
        android:id="@+id/searchText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:inputType="text"
        android:maxLines="1"
        android:hint="@string/search_hint" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchText"
        android:layout_marginStart="250dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_search_icon" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchText"
        android:layout_below="@+id/searchText"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000" >

        <LinearLayout
            android:id="@+id/linear_search_results"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            
            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>